<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/buildingname"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_margin="10dp"
                    android:textColor="#303030"
                    android:textSize="20sp"
                    android:text="Building"
                    android:id="@+id/buildingtext"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

            <TextView

                    android:textColor="#303030"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="Building"
                    android:id="@+id/building_name"
                    android:layout_marginLeft="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/conference"
                android:layout_below="@id/buildingname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_margin="10dp"
                    android:textColor="#303030"
                    android:textSize="20sp"
                    android:text="Conference"
                    android:id="@+id/conferencename"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

            <TextView

                    android:textColor="#303030"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="Conference"
                    android:id="@+id/conferenceRoomName"
                    android:layout_marginLeft="65dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/purposeline"
                android:layout_below="@id/conference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_margin="10dp"
                    android:textColor="#303030"
                    android:textSize="20sp"
                    android:text="Purpose"
                    android:id="@+id/purpose_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

            <TextView

                    android:textColor="#303030"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="Purpose"
                    android:id="@+id/purpose"
                    android:layout_marginLeft="95dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/dateline"
                android:layout_below="@id/purposeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_margin="10dp"
                    android:textColor="#303030"
                    android:textSize="20sp"
                    android:text="Date"
                    android:id="@+id/date_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

            <TextView

                    android:textColor="#303030"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="Date"
                    android:id="@+id/date"
                    android:layout_marginLeft="125dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/durationline"
                android:layout_below="@id/dateline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_margin="10dp"
                    android:textColor="#303030"
                    android:textSize="20sp"
                    android:text="Duration"
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>


        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/period"
                android:layout_below="@id/durationline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_margin="10dp"
                    android:textColor="#303030"
                    android:textSize="20sp"
                    android:text="From Time"
                    android:id="@+id/from_time"
                    android:layout_marginRight="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

            <TextView

                    android:textColor="#303030"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="-----"
                    android:id="@+id/dash"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
            <TextView

                    android:textColor="#303030"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="To Time"
                    android:id="@+id/to_time"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
        </LinearLayout>

        <Button
                android:layout_margin="10dp"
                android:textColor="#303030"
                android:textSize="20sp"
                android:text="Cancel"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_below="@id/period"
                android:layout_centerHorizontal="true"
                android:background="@drawable/buttonsubmit"
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <TextView
                android:layout_margin="20dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:text="Booking Summary"
                android:layout_width="wrap_content"
                android:layout_height="80dp"/>
    </LinearLayout>
<LinearLayout
        android:id="@+id/name"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:text="Name"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="60dp"/>
    <TextView
            android:text="Employee Name"
            android:textSize="30dp"
            android:layout_marginLeft="40dp"
            android:textColor="#000000"
            android:id="@+id/textView_name"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="60dp"/>
</LinearLayout>

    <LinearLayout
            android:id="@+id/building"
            android:layout_below="@id/name"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Building"
                android:textSize="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="60dp"/>
        <TextView
                android:text="Building Name"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:id="@+id/textView_buildingname"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="60dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/room"
            android:layout_below="@id/building"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Room"
                android:textSize="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="60dp"/>
        <TextView
                android:text="Room Name"
                android:textSize="30dp"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:id="@+id/textView_conf_name"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="60dp"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/date"
            android:layout_below="@+id/room"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Date"
                android:textSize="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="60dp"/>
        <TextView
                android:text="Date"
                android:textSize="30dp"
                android:layout_marginLeft="55dp"
                android:textColor="#000000"
                android:id="@+id/textView_date"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="60dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/fromTime"
            android:layout_below="@id/date"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="From"
                android:textSize="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="60dp"/>
        <TextView
                android:text="From"
                android:textSize="30dp"
                android:layout_marginLeft="45dp"
                android:textColor="#000000"
                android:id="@+id/textView_from_time"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="60dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/totime"
            android:layout_below="@id/fromTime"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="To"
                android:textSize="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="60dp"/>
        <TextView
                android:text="To"
                android:textSize="30dp"
                android:layout_marginLeft="80dp"
                android:textColor="#000000"
                android:id="@+id/textView_to_time"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="60dp"/>
    </LinearLayout>

    <EditText
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:hint="Purpose"
            android:textSize="28dp"
            android:id="@+id/editText_purpose"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_below="@+id/totime"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <Button
            android:layout_below="@id/editText_purpose"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Select Members"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/button"
            android:background="@drawable/buttonsubmit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

    <Button
            android:layout_below="@id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Book"
            android:id="@+id/book_button"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/buttonsubmit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>





</RelativeLayout>
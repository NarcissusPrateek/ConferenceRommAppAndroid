<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:hint="Employee Name"
            android:textAlignment="center"
            android:layout_width="244dp"
            android:textSize="25dp"
            android:layout_height="43dp" android:id="@+id/textView_name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="103dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView_conf_name"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:hint="Room Name"
            android:textAlignment="center"
            android:layout_width="244dp"
            android:textSize="25dp"
            android:layout_height="43dp" android:id="@+id/textView_conf_name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="65dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" android:layout_marginStart="102dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/textView_date"/>
    <TextView
            android:hint="From-Time"
            android:layout_width="244dp"
            android:textAlignment="center"
            android:layout_height="43dp"
            android:id="@+id/textView_from_time"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="102dp"
            android:textSize="25dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/textView_to_time"/>
    <TextView
            android:hint="To-Time"
            android:layout_width="244dp"
            android:layout_height="54dp"
            android:id="@+id/textView_to_time"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="65dp"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="102dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:layout_above="@+id/textView_date"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toTopOf="@+id/textView_buildingname"/>
    <TextView
            android:hint="Building Name"
            android:layout_width="244dp"
            android:layout_height="49dp"
            android:textSize="25dp"
            android:id="@+id/textView_buildingname"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="65dp"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="102dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:layout_above="@+id/textView_date"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/editText_purpose"/>
    <TextView
            android:hint="Booking Date"
            android:layout_width="243dp"
            android:layout_height="36dp"
            android:id="@+id/textView_date"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/editText_purpose"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/textView_from_time"
            app:layout_constraintHorizontal_bias="0.618"/>

    <EditText
            android:hint="Purpose Of Meeting"
            android:layout_width="244dp"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_height="49dp"
            android:id="@+id/editText_purpose"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="71dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" android:layout_marginStart="95dp"
            android:layout_above="@+id/book_button"
            android:layout_marginBottom="60dp" app:layout_constraintBottom_toTopOf="@+id/book_button"/>

    <!--<EditText android:layout_width="wrap_content"-->
              <!--android:layout_height="wrap_content"-->
              <!--android:hint="Purpose of Meeting11111111"-->
              <!--android:id="@+id/qwerty"/>-->
    <Button
            android:text="BOOK"
            android:layout_width="152dp"
            android:textAlignment="center"
            android:layout_height="48dp"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/book_button" android:layout_alignParentBottom="true"
            android:layout_marginEnd="119dp" android:layout_alignParentStart="true" android:layout_marginStart="140dp"
            android:layout_alignParentEnd="true" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
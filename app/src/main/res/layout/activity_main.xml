<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.UserInputActivity">


    <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/fromTime"
            android:hint="From Time"
            android:paddingLeft="30px"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/edittext_bg"
            android:inputType="textCapCharacters"
    />

    <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/toTime"
            android:hint="To Time"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="30px"
            android:background="@drawable/edittext_bg"
            android:layout_toRightOf="@+id/fromTime"
            android:inputType="textPersonName"

    />
    <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/date"
            android:hint="Date"
            android:layout_marginTop="50dp"
            android:paddingLeft="30px"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/fromTime"
            android:background="@drawable/edittext_bg"


    />
    <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/capcity"
            android:hint="Eg:4"
            android:paddingLeft="30px"
            android:layout_toRightOf="@+id/date"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/toTime"
            android:background="@drawable/edittext_bg"
            android:inputType="number"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/capcity"

            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"
            android:text="Next"
            android:id="@+id/next"
            android:textColor="@color/white"
            android:background="@drawable/buttonbg"
    />

</RelativeLayout>
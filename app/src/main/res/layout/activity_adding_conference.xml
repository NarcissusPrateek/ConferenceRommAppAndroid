<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddingConference">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
                android:textStyle="normal"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Conference"
                android:textColor="#242B53"
        />
    </RelativeLayout>


    <EditText
            android:layout_height="60dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:id="@+id/conference_Name"

            android:inputType="textPersonName"
            android:layout_below="@+id/buiding_Spinner"
            android:layout_width="match_parent"
            android:hint="Conference Room Name"
            android:singleLine="true"/>
    <EditText
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:backgroundTint="#242B53"
            android:id="@+id/conference_Capacity"
            android:inputType="number"
            android:layout_below="@+id/conference_Name"
            android:hint="Capcity"
            android:layout_marginRight="60dp"

            android:layout_width="match_parent"
            android:singleLine="true"/>

    <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/add_conference_room"
            android:text="Add Room"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonsubmit"
            android:layout_below="@+id/conference_Capacity"
            android:layout_centerHorizontal="true"
    />

</RelativeLayout>
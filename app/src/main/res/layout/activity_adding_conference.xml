<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddingConference">

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="175dp"
            android:id="@+id/buiding_Spinner"
            />

    <EditText
            android:id="@+id/conference_Name"
            android:inputType="textPersonName"
            android:layout_below="@+id/buiding_Spinner"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Conference Room Name"
    />
    <EditText
            android:id="@+id/conference_Capacity"
            android:inputType="number"
            android:layout_below="@+id/conference_Name"
            android:layout_marginTop="20dp"
            android:hint="Capcity"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/add_conference_room"
            android:text="Add Room"
            android:textStyle="bold"
            android:layout_below="@+id/conference_Capacity"
            android:layout_centerHorizontal="true"
    />

</RelativeLayout>
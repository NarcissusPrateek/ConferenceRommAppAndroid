<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddingConference">



    <EditText
            android:layout_height="60dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:id="@+id/conference_Name"

            android:inputType="textPersonName"
            android:layout_below="@+id/buiding_Spinner"
            android:layout_width="match_parent"
            android:hint="Conference Room Name"
            android:singleLine="true"/>

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="60dp"
            android:id="@+id/conference_Capacity"
            android:popupBackground="#D2D2DA"
            android:layout_marginStart="60dp"
            android:backgroundTint="#9596A0"
            android:background="#9596A0"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:visibility="visible"
            android:layout_marginTop="20dp"
            android:layout_below="@id/conference_Name"
           />


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Spinner">

      <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text=""
                android:textStyle="normal"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="#242B53"/>
    </RelativeLayout>
    <Spinner
            android:popupBackground="#D2D2DA"
            android:layout_marginStart="17dp"
            android:backgroundTint="#9596A0"
            android:background="@color/colorAccent"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:visibility="visible"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="150dp"
            android:id="@+id/buiding_Spinner"/>
    <Spinner
            android:popupBackground="#D2D2DA"
            android:layout_marginStart="17dp"
            android:backgroundTint="#9596A0"
            android:background="#9596A0"
            android:layout_marginEnd="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:visibility="visible"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="250dp"
            android:id="@+id/conference_Spinner"/>

    <Button
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Block"
            android:layout_marginTop="20dp"
            android:layout_below="@id/conference_Spinner"
            android:background="@drawable/buttonsubmit"
            android:textSize="20dp"
            android:id="@+id/block_conference"
            android:textStyle="bold"/>


</RelativeLayout>
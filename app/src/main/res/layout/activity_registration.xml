<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:hint="Employee Name"
            android:layout_width="186dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView_name"
            android:layout_marginEnd="16dp" android:layout_marginTop="124dp" app:layout_constraintTop_toTopOf="parent"/>
            app:layout_constraintStart_toEndOf="@+id/textView_name2" android:layout_marginStart="8dp"/>

    <TextView
            android:hint="Employee Name"
            android:layout_width="151dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="48dp"
            android:id="@+id/textView_name2"
            android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView_name" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.242"/>

    <TextView
            android:hint="Email"
            android:layout_width="138dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="43dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView_name3"
            android:layout_marginStart="32dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_name2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView_email" app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:hint="Email"
            android:layout_width="209dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="54dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView_email"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/textView_name"/>
    <EditText
            android:hint="Enter Employee ID"
            android:layout_width="296dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/edittext_id" app:layout_constraintHorizontal_bias="0.495"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView_email"
    />

    <!--@+id/edittext_Role-->


    <Button
            android:text="Add Details"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button_add"
            android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
    />
    <Spinner
            android:layout_width="344dp"
            android:layout_height="49dp"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/spinner"

            app:layout_constraintHorizontal_bias="0.492" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/button_add" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edittext_id" app:layout_constraintVertical_bias="0.84"/>
</androidx.constraintlayout.widget.ConstraintLayout>
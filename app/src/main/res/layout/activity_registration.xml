<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:hint="Employee Name"
            android:layout_width="211dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="54dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView_name" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView_email"
            app:layout_constraintVertical_bias="0.824" android:layout_marginEnd="12dp"/>
            app:layout_constraintStart_toEndOf="@+id/textView_name2" android:layout_marginStart="8dp"/>

    <TextView
            android:hint="Employee Name"
            android:layout_width="101dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="52dp"
            android:id="@+id/textView_name2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView_name3"
            app:layout_constraintVertical_bias="0.751" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView_name" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.204"/>

    <TextView
            android:hint="Email"
            android:layout_width="101dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView_name3" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/edittext_id"
            app:layout_constraintHorizontal_bias="0.058" app:layout_constraintVertical_bias="0.9"/>
    <TextView
            android:hint="Email"
            android:layout_width="209dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="54dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView_email" app:layout_constraintHorizontal_bias="0.786"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/edittext_id"
            app:layout_constraintStart_toEndOf="@+id/textView_name3" android:layout_marginStart="8dp"/>
    <EditText
            android:hint="Enter Employee ID"
            android:layout_width="296dp"
            android:layout_height="54dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/edittext_id" app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.41"/>
    <EditText
            android:hint="Enter Desgination"
            android:layout_width="296dp"
            android:layout_height="54dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/edittext_Role" app:layout_constraintHorizontal_bias="0.495"
            android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/edittext_id"/>
    <Button
            android:text="Add Details"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button_add" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edittext_Role" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.265"/>
</androidx.constraintlayout.widget.ConstraintLayout>
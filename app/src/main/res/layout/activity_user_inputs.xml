<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"

        tools:context=".Activity.UserInputActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From Time"
            android:layout_marginTop="150dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_below="@+id/from_time"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="170dp"
            android:id="@+id/fromTime"
            android:inputType="none"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:background="@drawable/edittext_bg"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Time"
            android:layout_marginTop="220dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/toTime"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/fromTime"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:background="@drawable/edittext_bg"
            android:inputType="none"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_marginTop="290dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_below="@+id/from_time"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_marginTop="20dp"
            android:id="@+id/date"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/toTime"
            android:background="@drawable/edittext_bg"
            android:editable="false"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacity"
            android:layout_marginTop="370dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/black"
            android:layout_below="@+id/from_time"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"/>


    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="11dp"
            android:id="@+id/spinner2"
            android:popupBackground="@color/colorAccent"
            android:layout_marginStart="17dp"
            android:backgroundTint="@color/colorPrimary"
            android:background="@color/colorAccent"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:visibility="visible"
            android:layout_marginTop="388dp"
            android:layout_alignParentTop="true"/>
    <Button
            android:text="Button"
            android:layout_width="135dp"
            android:layout_height="52dp"
            android:layout_below="@+id/spinner2"
            android:id="@+id/next"
            android:layout_marginTop="89dp"
            android:layout_marginStart="112dp" android:layout_alignParentEnd="true" android:layout_marginEnd="134dp"/>


</RelativeLayout>
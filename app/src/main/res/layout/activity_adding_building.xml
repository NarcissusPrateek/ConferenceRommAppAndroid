<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.AddingBuilding">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:id="@+id/input_buildingName"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/input_buildingName"
            android:layout_margin="10dp"
            android:id="@+id/input_buildingPlace"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Add Building"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/addbuilding"
            android:layout_below="@+id/input_buildingPlace"
            android:layout_centerHorizontal="true"
    />
</RelativeLayout>